* scene:
	probe: rgb32cube: default_cube
	irradiance: default_shcoeffs

* background: 
	sun: 2.0,1.5,0.0
	animations:
		- backandforth: 0.75 world 0.0,-1.0,0.0 0.6

* camera:
	position: 0,0,1
	center: 0,0,0
	up: 0,1,0
	fov: 1.3

# Objects
* object:
	type: PBRRegular
	mesh: suzanne
	translation: 0.2,0.0,0.0
	scaling: 0.25
	textures:
		- srgb: suzanne_texture_color
		- rgb: suzanne_texture_normal
		- rgb: suzanne_texture_rough_met_ao
	animations:
		- rotation: 1.0 model 0.0,1.0,0.0 
	shadows: true

* object:
	type: PBRRegular
	mesh: dragon
	translation: -0.1,-0.05,-0.25
	scaling: 0.5
	textures:
		- srgb: dragon_texture_color
		- rgb: dragon_texture_normal
		- rgb: dragon_texture_rough_met_ao 
	shadows: true

* object:
	type: PBRParallax
	mesh: groundplane
	translation: 0.0,-0.35,-0.5
	scaling: 2.0
	textures:
		- srgb: groundplane_texture_color 
		- rgb: groundplane_texture_normal 
		- rgb: groundplane_texture_rough_met_ao 
		- rgb: groundplane_texture_depth 
	shadows: false

# Lights
* directional:
	# Replicate the sun movement, the direction and animation should be the reverse of the sky ones.
	direction: -2.0,-1.5,0.0
	intensity: 1.0,1.0,0.92
	shadows: true
	animations:
		- backandforth: 0.75 world 0.0,1.0,0.0 0.6
		
* spot:
	position: 1.1,2.0,1.1
	direction: -1.0,-1.0,-1.0
	radius: 5.0
	cone: 0.5 0.6
	shadows: true
	animations:
		- backandforth: 0.5 world 1.0,0.0,1.0 2.0
	intensity: 0.0,10.0,10.0
* point:
	position: -1.0,-0.1,-1.0
	intensity: 4.0,0.0,0.0
	radius: 1.5
	shadows: false
	animations:
		- rotation: 0.8 world 0.0,1.0,0.0
* point:
	position: 1.0,-0.1,-1.0
	intensity: 0.0,4.0,0.0
	radius: 1.5
	shadows: false
	animations:
		- rotation: 0.8 world 0.0,1.0,0.0
* point:
	position: -1.0,-0.1,1.0
	intensity: 0.0,0.0,4.0
	radius: 1.5
	shadows: false
	animations:
		- rotation: 0.8 world 0.0,1.0,0.0
* point:
	position: 1.0,-0.1,1.0
	intensity: 4.0,4.0,0.0
	radius: 1.5
	shadows: false
	animations:
		- rotation: 0.8 world 0.0,1.0,0.0
